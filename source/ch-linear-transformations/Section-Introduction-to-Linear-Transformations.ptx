  \draw[line width=2pt,red,-stealth](6,0)--(6,1.5) node[right]{\(T\left(\begin{bmatrix}1\\2\\0\end{bmatrix}\right)=\begin{bmatrix}0\\0\\3\end{bmatrix}\)};
  \draw [-\gt ,line width=1pt,-stealth]  (2.5,2) to[out=30, in=150] (5, 2);
